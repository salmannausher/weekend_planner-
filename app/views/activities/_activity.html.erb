<div class="bg-white p-4 rounded-lg border border-gray-200 shadow-sm">
  <div class="flex justify-between items-start">
    <div>
      <h3 class="text-lg font-semibold text-gray-800 mb-1"><%= activity.name %></h3>
      <% if activity.start_time.present? %>
        <p class="text-sm text-gray-500 mb-2"><%= activity.start_time.strftime("%B %d, %Y") %></p>
      <% end %>
      <p class="text-gray-600"><%= activity.description %></p>
      <% if activity.location.present? %>
        <p class="text-sm text-gray-500 mt-2"><strong>Location:</strong> <%= activity.location %></p>
      <% end %>
      <% if activity.suggested_by.present? %>
        <p class="text-xs text-gray-400 mt-2">Suggested by: <%= activity.suggested_by %></p>
      <% end %>
    </div>
    
    <% if current_user && activity.plan.user == current_user %>
      <div class="flex space-x-2">
        <%= link_to edit_plan_activity_path(activity.plan, activity), class: "text-gray-600 hover:text-black bg-gray-100 p-1.5 rounded-md border border-gray-200 shadow-sm", data: { turbo_frame: "modal" } do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
          </svg>
        <% end %>
        
        <%= button_to plan_activity_path(activity.plan, activity), method: :delete, class: "text-gray-600 hover:text-black bg-gray-100 p-1.5 rounded-md border border-gray-200 shadow-sm", form: { data: { turbo_confirm: "Are you sure you want to delete this activity?" } } do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
          </svg>
        <% end %>
      </div>
    <% end %>
  </div>
</div> 