<%= turbo_frame_tag "modal" do %>
  <div class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
    <div class="bg-white rounded-lg shadow-xl max-w-2xl w-full max-h-[90vh] overflow-y-auto">
      <div class="p-6">
        <div class="flex justify-between items-center mb-6">
          <h1 class="text-2xl font-bold text-gray-900">Edit Plan</h1>
          <%= link_to "Ã—", plans_path, class: "text-3xl font-semibold text-gray-500 hover:text-black" %>
        </div>
        
        <%= form_with(model: plan, local: true, class: "space-y-6") do |f| %>
          <% if plan.errors.any? %>
            <div class="bg-red-50 text-red-500 p-4 rounded-md mb-6">
              <h2 class="text-lg font-medium mb-2"><%= pluralize(plan.errors.count, "error") %> prohibited this plan from being saved:</h2>
              <ul class="list-disc pl-5">
                <% plan.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          
          <div>
            <%= f.label :title, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :title, class: "w-full border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-black" %>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <%= f.label :start_date, class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= f.date_field :start_date, class: "w-full border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-black" %>
            </div>
            
            <div>
              <%= f.label :end_date, class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= f.date_field :end_date, class: "w-full border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-black" %>
            </div>
          </div>
          
          <div>
            <%= f.label :location, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :location, class: "w-full border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-black" %>
          </div>
          
          <div>
            <%= f.label :description, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_area :description, rows: 4, class: "w-full border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-black" %>
          </div>
          
          <div class="flex justify-end space-x-3">
            <%= link_to "Cancel", plans_path, class: "bg-white hover:bg-gray-100 text-gray-800 px-4 py-2 rounded-md border border-gray-300 text-sm font-medium" %>
            <%= f.submit "Update Plan", class: "bg-black hover:bg-gray-800 text-white px-4 py-2 rounded-md text-sm font-medium" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %> 