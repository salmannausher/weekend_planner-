<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full">
    <div class="text-center mb-8">
      <h1 class="text-3xl font-extrabold text-gray-900">Weekend Planner</h1>
      <p class="mt-2 text-sm text-gray-600">Sign in to your account</p>
    </div>
    
    <div class="bg-white p-8 rounded-lg shadow-md border border-gray-200">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="mb-4">
          <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border-2 border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-black" %>
        </div>

        <div class="mb-4">
          <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-3 py-2 border-2 border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-black" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="mb-6 flex items-center">
            <%= f.check_box :remember_me, class: "h-4 w-4 text-black focus:ring-black border-gray-300 rounded" %>
            <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-700" %>
          </div>
        <% end %>

        <div class="mb-6">
          <%= f.submit "Sign in", class: "w-full bg-black hover:bg-gray-800 text-white font-medium py-3 px-4 rounded-md cursor-pointer shadow-sm" %>
        </div>
      <% end %>

      <div class="text-center text-sm text-gray-600 border-t border-gray-200 pt-4 mt-2">
        <%= render "devise/shared/links" %>
      </div>
    </div>
    
    <div class="mt-6 text-center">
      <div class="flex items-center justify-center space-x-2">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
        </svg>
        <span class="text-xs text-gray-500">Secure login with 256-bit encryption</span>
      </div>
    </div>
  </div>
</div>
